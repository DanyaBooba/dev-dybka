---
layout: "base.njk"
---

{% include 'header.njk' %}

<main class="container">
    <div class="row row-cols-1 gx-5">
        <div class="col-md-4 see-at-pc" id="lessonleftpcmenu">
            {% include 'courses/lists/' + lessonUrl + '.njk' %}
        </div>
        <div class="col-md-8 content" id="lessonrightcontent">
            <div class="d-none see-at-pc mb-2" id="lessonbuttonmenu">
                <button type="button" onClick="getShort()" class="btn btn-openmenu">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16">
                        <path fill-rule="evenodd" d="M4.146 3.646a.5.5 0 0 0 0 .708L7.793 8l-3.647 3.646a.5.5 0 0 0 .708.708l4-4a.5.5 0 0 0 0-.708l-4-4a.5.5 0 0 0-.708 0zM11.5 1a.5.5 0 0 1 .5.5v13a.5.5 0 0 1-1 0v-13a.5.5 0 0 1 .5-.5z"/>
                    </svg>
                    Открыть меню
                </button>
            </div>

            {{ content | safe }}

            {% if next or prev %}
            <div class="container px-0">
                <div class="row pagination-reverse px-3 row-cols-1 row-cols-lg-2 pagination">
                    {% if next %}
                        <div class="next">
                            <a href="/{{ lessonUrl }}/{{ next }}" id="postnextlesson" class="d-flex align-items-center" aria-label="Открыть следующий урок">
                                Следующий урок
                                <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 16 16">
                                    <path fill-rule="evenodd" d="M4 8a.5.5 0 0 1 .5-.5h5.793L8.146 5.354a.5.5 0 1 1 .708-.708l3 3a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708-.708L10.293 8.5H4.5A.5.5 0 0 1 4 8z"/>
                                </svg>
                            </a>
                            <div class="hotkeys see-at-pc">
                                <span>alt</span> +
                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="4 4 8 8">
                                    <path fill-rule="evenodd" d="M4 8a.5.5 0 0 1 .5-.5h5.793L8.146 5.354a.5.5 0 1 1 .708-.708l3 3a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708-.708L10.293 8.5H4.5A.5.5 0 0 1 4 8z"/>
                                </svg>
                            </div>
                        </div>
                    {% endif %}
                    {% if prev %}
                        <div class="previous">
                            <a href="/{{ lessonUrl }}/{{ prev }}" id="postprevlesson" class="d-flex align-items-center" aria-label="Открыть предыдущий урок">
                                <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 16 16">
                                    <path fill-rule="evenodd" d="M12 8a.5.5 0 0 1-.5.5H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5H11.5a.5.5 0 0 1 .5.5z"/>
                                </svg>
                                Предыдущий урок
                            </a>
                            <div class="hotkeys hotkeys-end see-at-pc">
                                <span>alt</span> +
                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="4 4 8 8">
                                    <path fill-rule="evenodd" d="M12 8a.5.5 0 0 1-.5.5H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5H11.5a.5.5 0 0 1 .5.5z"/>
                                </svg>
                            </div>
                        </div>
                    {% endif %}
                </div>
            </div>
            {% endif %}
        </div>
    </div>

</main>

{% if not info %}
{% include 'courses/bottom.njk' %}
{% else %}
{% include 'courses/bottom-mainpage.njk' %}
{% endif %}

{% include 'footer.njk' %}
