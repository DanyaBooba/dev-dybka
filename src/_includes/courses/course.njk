---
layout: "base.njk"
---

{% include 'header.njk' %}

<main class="container">
    <div class="row row-cols-1 gx-5">
        <div class="col-md-4 see-at-pc" id="lessonleftpcmenu">
            {% include 'courses/lists/' + lessonUrl + '.njk' %}
        </div>
        <div class="col-md-8 content" id="lessonrightcontent">
            <div class="d-none see-at-pc mb-2" id="lessonbuttonmenu">
                <button type="button" onClick="getShort()" class="btn btn-openmenu">
                    <svg><use xlink:href="/img/icons/icons.svg#chevron-bar-right"></use></svg>Открыть меню
                </button>
            </div>

            <div id="posttitle" class="visually-hidden">Начало урока</div>

            <div id="postcontent">
                {{ content | safe }}

                {% if privatecourse %}
                <div class="private-course" id="privatecoursecode">
                    <div class="private-course--title">Пожалуйста, введите пароль курса</div>
                    <div class="private-course--more">Данный курс закрытый и требует пароль.</div>
                    <form method="get" action="?">
                        <div class="input-group">
                            <input type="password" class="form-control" name="c" placeholder="Пароль" aria-label="Пароль для курса">
                        </div>
                    </form>
                    <div class="private-course--more">Если вам не сообщили пароль, уточните его у автора курса</div>
                </div>
                {% endif %}
            </div>

            {% if next or prev or nextEnd %}
            <div class="container px-0">
                <div class="row pagination-reverse px-3 row-cols-1 row-cols-lg-2 pagination">
                    {% if nextEnd %}
                        <div class="next">
                                <a href="/courses/{{ lessonUrl }}/{{ nextEnd }}" id="postnextlesson" class="d-flex align-items-center" aria-label="Открыть следующий урок">
                                    Завершить курс <svg width="32" height="32"><use xlink:href="/img/icons/icons.svg#arrow-right-short"></use></svg>
                                </a>
                                <div class="hotkeys see-at-pc">
                                    <span>alt</span> + <svg><use xlink:href="/img/icons/icons.svg#arrow-right-short"></use></svg>
                                </div>
                            </div>
                    {% endif %}
                    {% if next %}
                        <div class="next">
                            <a href="/courses/{{ lessonUrl }}/{{ next }}" id="postnextlesson" class="d-flex align-items-center" aria-label="Открыть следующий урок">
                                Следующий урок <svg width="32" height="32"><use xlink:href="/img/icons/icons.svg#arrow-right-short"></use></svg>
                            </a>
                            <div class="hotkeys see-at-pc">
                                <span>alt</span> + <svg><use xlink:href="/img/icons/icons.svg#arrow-right-short"></use></svg>
                            </div>
                        </div>
                    {% endif %}
                    {% if prev %}
                        <div class="previous">
                            <a href="/courses/{{ lessonUrl }}/{{ prev }}" id="postprevlesson" class="d-flex align-items-center" aria-label="Открыть предыдущий урок">
                                <svg width="32" height="32"><use xlink:href="/img/icons/icons.svg#arrow-left-short"></use></svg> Предыдущий урок
                            </a>
                            <div class="hotkeys hotkeys-end see-at-pc">
                                <span>alt</span> + <svg><use xlink:href="/img/icons/icons.svg#arrow-left-short"></use></svg>
                            </div>
                        </div>
                    {% endif %}
                </div>
            </div>
            {% endif %}
        </div>
    </div>

</main>

{% if not info %}
{% include 'courses/bottom.njk' %}
{% else %}
{% include 'courses/bottom-mainpage.njk' %}
{% endif %}

{% include 'footer.njk' %}

{% if privatecourse %}
<script src="/js/private-course.js"></script>
<script>
    OpenCourse({{ private_idcourse }}, {{ private_idlesson }});
</script>
{% endif %}

{% if final %}
<script src="/js/final-course.js"></script>
{% endif %}
