<div class="container mb-2">
    <div class="leftbar-row">
        <div class="col">
            <button onClick="hideLeftMenu()" class="leftbar-btn leftbar-flex">
                <svg width="32" height="32"><use xlink:href="/img/icons/icons.svg#chevron-bar-left"></use></svg>Скрыть меню
            </button>
        </div>
        <div class="col">
            <a href="/courses/{{ lesson.url }}/" class="leftbar-btn leftbar-flex">
                <svg width="32" height="32"><use xlink:href="/img/icons/icons.svg#info"></use></svg>Информация
            </a>
        </div>
    </div>
</div>

<div id="leftbar" class="list-group list-group-flush">

    {% for bar in lesson.leftbar %}
    <a id="leftbar_{{ bar.id }}" href="/courses/{{ lesson.url }}/{{ bar.id }}" class="list-group-item list-group-item-action">
        {{ bar.id }}. {{ bar.name }}
    </a>
    {% endfor %}

    <a href="/courses/unity/11" class="list-group-item list-group-item-action {{ final }}">
        Завершение
    </a>
</div>
