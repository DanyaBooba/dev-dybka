<div class="container px-0 mb-2">
    <div class="leftbar-row">
        <div class="col">
            <button onClick="hideLeftMenu()" class="leftbar-btn leftbar-flex">
                <svg width="32" height="32" style="margin-right: 10px"><use xlink:href="/img/icons/icons.svg#chevron-bar-left"></use></svg>Скрыть меню
            </button>
        </div>
        <div class="col">
            <a id="leftbar_buttoninfo" href="/tasks/{{ lesson.url }}/" class="leftbar-btn leftbar-flex">
                <svg width="32" height="32" style="margin-right: 10px"><use xlink:href="/img/icons/icons.svg#info"></use></svg>Информация
            </a>
        </div>
    </div>
</div>
<div id="leftbar" class="list-group leftbar-margin list-group-flush">
    {% for bar in lesson.leftbar %}
    <a id="leftbar_{{ bar.id }}" href="/tasks/{{ lesson.url }}/{{ bar.id }}/" class="list-group-item list-group-item-action">
        {{ bar.id }}. {{ bar.name }}
    </a>
    {% endfor %}
</div>
